// -*- mode: jsonc -*-
{
    "layer": "top",
    "position": "top",
    "height": 38, // to be removed for auto height
    "spacing": 4, // Gaps between modules (4px)
    "reload_style_on_change": true,
    

    /***************************
     * Groups
    ****************************/

    "group/peripherics": {
        "orientation": "horizontal",
        "modules": ["pulseaudio#output", "pulseaudio#input", "backlight"]
    },

    "group/system": {
        "orientation": "horizontal",
        "modules": ["cpu", "memory", "temperature"]
    },


    /***************************
     * Modules order
    ****************************/

    "modules-left": [
        "clock",
        "tray",
        "hyprland/window"
        
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "mpris",
        "keyboard-state",
        "group/peripherics",
        "network",
        "group/system",
        "power-profiles-daemon",
        "battery",
        "custom/notification"
    ],


    /**********************************************************************
     ***** LEFT
    ***********************************************************************/

    /*********************
     * CLOCK
    **********************/

    "clock": {
        "format": "{:%a %b %d | %R}",
        //"format": "\uF017  {:%H:%M}",
        "format-alt": "\uF017  {:%H:%M  |  \uF073  %d/%m/%Y}",
        "timezone": "Europe/Paris"
    },


    /*********************
     * TRAY
    **********************/

    "tray": {
        "icon-size": 15,
        "spacing": 10
    },


    /*********************
     * WINDOW
    **********************/

    "hyprland/window": {
        "icon": true,
        "icon-size": 14,
        "max-length": 80
    },


    /**********************************************************************
     ***** CENTER
    ***********************************************************************/

    /*********************
     * WORKSPACES
    **********************/


    /*********************
     * MPRIS
    **********************/

    "mpris": {
        "format": "{player_icon} {title} - {artist}",
        "format-paused": "{status_icon} <i>{title} - {artist}</i>",
        "max-length": 50,
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        // "ignored-players": ["firefox"]
    },

    /**********************************************************************
     ***** RIGHT
    ***********************************************************************/

    /*********************
     * KEYBOARD STATE
    **********************/

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "\uF023",
            "unlocked": "\uF09C"
        }
    },


    /*********************
     * PULSEAUDIO, BACKLIGHT
    **********************/

    "pulseaudio#input": {
        "format": "{format_source}  |",
        "format-bluetooth": "{format_source}  |",
        "format-bluetooth-muted": "{format_source}  |",
        "format-muted": "{format_source}  |",
        "format-source": "  {volume}% ÔÑ∞",
        "format-source-muted": "  {volume}% ÔÑ± ",
        "on-click-right": "pavucontrol",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
        "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 0.25%+ --limit 1.0",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 0.25%- --limit 1.0"
    },

    "pulseaudio#output": {
        "scroll-step": 0.25,  // can be a float
        "format": "{volume}% {icon}  |",
        "format-bluetooth": "Ôäì  {volume}% {icon}  |",
        "format-bluetooth-muted": "Ôäì  {volume}% {icon}  |",
        "format-muted": "{volume}% ÔÄ¶ÔÄç  |",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "\uF025 ",
            "headset": "\uF025 ",
            "phone": "ÔÇï ",
            "portable": "ÔÇï ",
            "car": "ÔÜπ",
            "default": ["ÔÄß ", "ÔÄ® "]
        },
        "on-click-right": "pavucontrol",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },

    "backlight": {
        "format": "  {percent}% {icon}",
        "on-scroll-up": "brillo -A 0.25",
        "on-scroll-down": "brillo -U 0.25",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },


    /*********************
     * NETWORK
    **********************/

    "network": {
        "format-wifi": "{signalStrength}% Ôá´ ",
        "format-ethernet": "/{cidr} Ôûñ",
        "tooltip-format": "{essid}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ipaddr}/{cidr}",
        "max-length": 50
    },


    /*********************
     * CPU, MEMORY, TEMPERATURE
    **********************/

    "cpu": {
        "format": "{usage}% Ôãõ   |  ",
        "tooltip": false,
        "max-length": 10
    },

    "memory": {
        "format": "{}% ÔÄπ   |  "
    },
    "temperature": {
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞C Ôãá",
        "format": "{temperatureC}¬∞C Ôãâ"
    },


    /*********************
     * POWER PROFILES
    **********************/

    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },


    /*********************
     * BATTERY
    **********************/

    "battery": {
        "interval": 60,
        "states": {
            "warning": 30,
            "critical": 10
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôá¶",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    /*********************
     * NOTIFICATION
    **********************/

    "custom/notification": {
        "tooltip": false,
        "format": "{} {icon}",
        "format-icons": {
          "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
          "none": "ÔÇ¢",
          "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
          "dnd-none": "Ôá∑",
          "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
          "inhibited-none": "ÔÇ¢",
          "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
          "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
      }
}
